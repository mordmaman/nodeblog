<% include partials/header %>
<div class="row text-center">
    <h1>Node Blog</h1>
</div>


<div class="row" style-"display:flex; flex-wrap:wrap">
        <% blogs.forEach(function(blog){ %>
        <div class="row">
            <div class="col-sm-4">
                <img  style="width: 150px;" src="<%= blog.image %>" alt="">
            </div>
            <div class="col-sm-8">
                <h4> <li style="list-style:none;"><%= blog.title %></li></h4>
                <h5> <li style="list-style:none;"><%= blog.date %></li></h5>
                <p><%= blog.content %></p>
            </div>     
        </div>             
        <% }); %>
    </div>

<p>
     <a class="btn btn-primary btn-large" href="/blogs/new">Add New Campground</a>
</p>

<% include partials/footer %>