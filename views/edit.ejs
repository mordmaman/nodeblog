<% include partials/header %>
<h1>Edit <%= blog.title %></h1>

<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="blog[date]" value="<%= blog.date %>">
        </div>
        <div class="form-group">
            <p>current image, change URL below to update</p>
            <img style="width:150px" src="<%= blog.image %>" alt="">
            <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div>
            <label>Blog Content</label>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
</form>

<% include partials/footer %>